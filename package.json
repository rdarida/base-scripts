  "scripts": {
    "presetup": "rimraf packages/**/node_modules packages/**/package-lock.json",
    "setup": "npm install && npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "postclean": "rimraf coverage docs",
    "lint": "eslint packages/*/{src,test}/**/*.{js,ts}",
    "format": "prettier --write \"packages/*/{src,test}/**/*.{js,ts}\"",
    "pretest": "rimraf coverage",
    "test": "jest",
    "build": "lerna run build",
    "publish": "lerna publish",
    "predocs": "rimraf docs",
    "docs": "lerna run docs"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "npm run format"
    }
  }
}
