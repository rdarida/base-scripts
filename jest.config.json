{
  "name": "base-scripts",
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testRegex": "(/test/.*|(\\.|/)test)\\.ts$",
  "moduleFileExtensions": ["js", "ts", "json", "node"],
  "collectCoverage": true,
  "collectCoverageFrom": ["./packages/*/src/**/*.ts"],
  "coveragePathIgnorePatterns": ["/dist/", "/node_modules/", "/test/", "/src/cli.ts"]
}
